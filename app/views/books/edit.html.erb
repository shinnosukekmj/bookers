<div class="edit-box">
    
    <h1>Editing Book</h1>
    
        <% if @book.errors.any? %>
            <div class="errors-box">
                <h4 class="errors-title"><%= @book.errors.count %> errors prohibited this book from being saved:</h4>
                    <ul class="errors-inside">
                        <% @book.errors.full_messages.each do |message| %>
                            <li class="errors-text"><%= message %></li>
                        <% end %>
                    </ul>
            </div>
        <% end %>
    
    <%=form_with model: @book,url: update_book_path(@book.id),method: :patch,local:true do|f|%>
    
    <div class="edit-content1"><%=f.label:title%></div>
    <div class="edit-content2"><%=f.text_field:title%></div>
    <div class="edit-content3"><%=f.label:body%></div>
    <div class="edit-content4"><%=f.text_area:body%></div>
    <div class="edit-content5"><%=f.submit'Update Book'%></div>
    <%end%>


    <div class="edit-bottom">
        <%=link_to 'Show',show_book_path(@book.id)%>
        <span>|</span>
        <%=link_to 'Back',books_path%>
    </div>
</div>