<div class="index-box">
    <h1>Books</h1>
    <div class="main-box">
        <table class="table-box">
            <thead>
                <tr>
                    <th>title</th>
                    <th>body</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
        <%@book.each do |book|%>
            <tbody>
                <th align="left">
                    <%=book.title%>
                </th>
                <th align="left">
                    <%=book.body%>
                </th>
                <th class="index-bottom">
                    <p>
                    <%=link_to 'Show',show_book_path(book.id)%>
                    <%=link_to 'Edit',edit_book_path(book.id)%>
                    <%=link_to 'Destroy',show_book_path(book.id),method: :delete,'data-confirm'=>'Are you sure?'%>
                    </p>
                </th>
            </tbody>
        <%end%>
        </table>
    </div>
</div>

<div class="new-box">
        <h1 class="new-title">New Book</h1>
        
        <% if @newbook.errors.any? %>
            <div class="errors-box">
                <h4 class="errors-title"><%= @newbook.errors.count %> errors prohibited this book from being saved:</h4>
                    <ul class="errors-inside">
                        <% @newbook.errors.full_messages.each do |message| %>
                            <li class="errors-text"><%= message %></li>
                        <% end %>
                    </ul>
            </div>
        <% end %>
        
        <%=form_with model: @newbook,url: create_book_path,method: :post,local:true do|f|%>
        <div class="new-box1"><%=f.label:title%></div>
        <div class="new-box2"><%=f.text_field:title%></div>
        <div class="new-box3"><%=f.label:body%></div>
        <div class="new-box4"><%=f.text_area:body%></div>
        <div class="new-box5"><%=f.submit'Create book'%></div>
        <%end%>
</div>